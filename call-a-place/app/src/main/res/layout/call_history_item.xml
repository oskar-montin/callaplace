<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="12dp" android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp"
    android:onClick="callHistorySelected">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3" android:rowCount="1"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_marginRight="18dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="1">

            <TextView android:id="@+id/callCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="Medium Text" />

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView android:id="@+id/callCardIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"/>

                <TextView android:id="@+id/callCardSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                    android:text="Small Text" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton android:id="@+id/redialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/ic_call_black_24dp"
            android:background="@android:color/transparent"
            android:onClick="callHistoryRedial"/>

    </GridLayout>
</android.support.v7.widget.CardView>